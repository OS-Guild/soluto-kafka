{
  "scripts": {
    "teardown": "docker-compose logs && docker-compose down --remove-orphans",
    "setup": "docker-compose pull && docker-compose build && docker-compose up -d",
    "test": "npm run teardown && npm run setup && npm run test:start && docker-compose logs && npm run teardown",
    "format": "prettier --write '**/*.{ts,js,json,java}'",
    "test:start": "jest --runInBand --forceExit --config jest.config.local.js --testResultsProcessor jest-teamcity-reporter"
  },
  "dependencies": {
    "@types/jest": "^24.0.12",
    "@types/node": "^11.13.8",
    "@types/node-fetch": "^2.5.2",
    "@types/uuid": "^3.4.4",
    "delay": "^4.2.0",
    "jest": "^24.9.0",
    "jest-cli": "^24.7.1",
    "jest-teamcity-reporter": "^0.9.0",
    "kafka-node": "4.1.3",
    "node-fetch": "^2.6.0",
    "simple-fake-server-server-client": "^2.0.1",
    "ts-jest": "^24.2.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "husky": "^3.1.0",
    "prettier": "^1.19.1",
    "prettier-plugin-java": "^0.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && git add ."
    }
  }
}
